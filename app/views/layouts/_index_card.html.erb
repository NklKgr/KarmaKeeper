
<div class="container my-5">
  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% @products.each do |product| %>
      <div class="col">
        <div class="card img-product rounded-4 overflow-hidden shadow mb-5 bg-white rounded">
          <%= link_to product_path(product) do %>
            <%= cl_image_tag product.photo.key if product.photo.attached? %>
            <div class="card-body text h-25">
              <h5 class="card-title text-truncate"><strong><%= product.name %></strong></h5>
              <p class="card-text text-truncate"><%= product.overview %></p>
              <hr>
              <div class="row justify-content-between text-right">
                <p class="col">Unit price: <%= product.price %> â‚¬</p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

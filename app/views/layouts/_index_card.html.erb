            <div class="card-body h-25">
              <h5 class="card-title text-truncate text-decoration:"><strong><%= product.name %></strong></h5>
              <p class="card-text text-truncate"><%= product.overview %></p>
              <div class="row justify-content-between">
                <p class="col text-right">Unit price: <%= product.price %> â‚¬</p>
              </div>
            </div>
            </div>
          <% end %>
      </div>

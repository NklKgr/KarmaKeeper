<div class="container mt-5 my-5">
  <div class="row">
    <div class="col-12 col-md-8 offset-md-2">
      <%= form_with url: products_path, method: :get, class: "rounded-bar d-flex shadow" do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control bg-color searchbar-rounded",
          placeholder: "Find a product"
        %>
        <%= submit_tag "Search", class: "btn btn-primary submit-button-rounded" %>
      <% end %>
    </div>
  </div>
</div>



<div class="banner background-div" style="background: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.3)), url('<%= cl_image_path(@product.photo.key) %>') no-repeat center center fixed; background-size: cover; object-position: center;">
  <div class="container">
    <h1><%= @product.name %></h1>
    <p class="color-white mt-2 fs-6 ">STARTING FROM <%= @product.price %>$ per <%= @product.unit %></p>
  </div>
</div>




<div class="container mt-5 mb-5 ">
  <div class="row m-0">
    <div class="col-8">
      <div class="container p-5 shadow-lg rounded bg-white rounded-4">
        <p class="h5 lh-base"><%= @product.overview %></p>
      </div>
    </div>

    <div class="col-4 d-flex align-items-center justify-content-center bg-light p-0 rounded-4">
      <%= render 'bookings/booking_form' %>
    </div>
  </div>
</div>
<div class="container mx-auto text-center">
<%= link_to '<i class="fa-solid fa-arrow-left"></i> Back to products'.html_safe, bookings_path, class: "btn btn-primary shadow mb-5 rounded-4" %>
</div>
